<div class="container">
  <div class="row">
    <div class="col">
      <h3>検索結果</h3>
      <table class="search-table">
        <thead>
          <tr class="table-around-border">
             <th class="col-md-1">順位</th>
             <th class="col-md-2">投稿者</th>
             <th class="col-md-4">タイトル</th>
             <th class="col-md-4">こんな場面で役立つ知識です</th>
         </tr>
        </thead>
        <tbody>
          <% lastFavorite = 0 %>
          <% j = 1 %>
          <% @articles.each.with_index(1) do |article,i| %>
          <% if i == 1 %>
            <% lastFavorite = article.favorites.count %>
          <% end %>
          <% if article.favorites.count != lastFavorite %>
          <% j = i %>
         <tr class="table-around-border">
             <td class="col-md-1">第<%= j %>位</td>
             <td class="col ranking-article-layout">
               <%= attachment_image_tag article.user, :profile_image, :fill, 80, 80, format: 'jpeg' %>
               <div><%= link_to article.user.profile_name, profile_path(article.user.id) %></div>
             </td>
             <td class="col-md-4"><%= link_to article.title, article_path(article) %></td>
             <td class="col-md-3"><%= article.situation%></td>
             <td class="col-md-2">❤️<%= article.favorites.count %></td>
         </tr>
         <% lastFavorite = article.favorites.count %>
         <% else %>
         <tr class="table-around-border">
             <td class="col-md-1">第<%= j %>位</td>
             <td class="col ranking-article-layout">
               <%= attachment_image_tag article.user, :profile_image, :fill, 80, 80, format: 'jpeg' %>
               <div><%= link_to article.user.profile_name, profile_path(article.user.id) %></div>
             </td>
             <td class="col-md-4"><%= link_to article.title, article_path(article) %></td>
             <td class="col-md-3"><%= article.situation%></td>
             <td class="col-md-2">❤️<%= article.favorites.count %></td>
         </tr>
         <% end %>
         <% end %>
        </tbody>
      </table>





    </div>
  </div>
</div>