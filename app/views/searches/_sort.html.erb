<div>
    <h3 class="title-layout">
      投稿記事一覧
    </h3>
</div>
<div>
  <div>
    <%= form_with model: article, url: sort_path, data: {remote: true} do |f| %>
    <%= f.select :keyword, [ ['投稿が新しい順', 'new'],
                           ['投稿が古い順', 'old'],
                           ['いいねが多い順', 'likes'],
                           ['いいねが少ない順', 'dislikes']] %>
    <%= f.submit "ソート" %>
    <% end %>
  </div>
</div>
<table class="index-main-table">
  <thead>
    <tr class="table-around-border">
      <th class="col-md-4">タイトル</th>
      <th class="col-md-4">シチュエーション</th>
      <th class="col-md-2">投稿者</th>
    </tr>
  </thead>
  <tbody>
  <% articles.each do |article| %>
    <tr class="table-around-border mx-auto">
      <td class="col-md-4"><%= link_to article.title, article_path(article) %></td>
      <td class="col-md-4"><%= article.situation %></td>
      <td class="col-md-2"><%= link_to article.user.profile_name, profile_path(article.user.id) %></td>
    </tr>
  <% end %>
  <%= paginate articles %>
  </tbody>
</table>