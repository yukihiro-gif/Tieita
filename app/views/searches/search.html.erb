<div class="container">
  <div class="row">
    <% @articles.each do |article| %>
    <div class="col-md-4">
      <div><%= article.user.profile_image %></div>
      <div><%= link_to article.user.profile_name, profile_path(article.user.id) %></div>
    </div>
    <div class="col-md-4"><%= link_to article.title, article_path(article) %></div>
    <% end %>
  </div>

</div>