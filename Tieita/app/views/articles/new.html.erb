<div class="container article-new-frame1">
  <div class="article-new-title">
    <h3>〇〇に役立つ〇〇（タイトル）</h3>
  </div>
  <div class="row article-new-frame2">
    <div class="article-new-frame3" style="background-color:#dcdcdc;">
    </div>
    <div class="article-new-frame4">
      <div class="article-new-frame5" style="background-color:#d3d3d3;">
        <p>著者</p>
        <p>コメント</p>
      </div>
      <div class="article-new-frame5" style="background-color:#c0c0c0;">
        <%= form_with model: @article, url: articles_path, method: :post, local: true do |f| %>
        <p>シチュエーション</p>
        <%= f.text_field :situation %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row article-new-frame6">
    <div class="make-article-procedure" style="background-color:#f5f5f5;">
      <%= form_with model: @article, url: articles_path, method: :post, local: true do |f| %>
      <div class="article-contents">
        <div class="article-image"><%= f.attachment_field :image1 %></div>
        <div class="article-text-field" style="background-color:#ffa500;"><%= f.text_field :description1, placeholder: "例" %></div>
      </div>
      <div class="article-contents">
        <div class="article-image"><%= f.attachment_field :image2 %></div>
        <div class="article-text-field" style="background-color:#ffa500;"><%= f.text_field :description2, placeholder: "例" %></div>
      </div>
      <div class="article-contents">
        <div class="article-image"><%= f.attachment_field :image3 %></div>
        <div class="article-text-field" style="background-color:#ffa500;"><%= f.text_field :description3, placeholder: "例" %></div>
      </div>
      <div class="article-contents">
        <div class="article-image"><%= f.attachment_field :image4 %></div>
        <div class="article-text-field" style="background-color:#ffa500;"><%= f.text_field :description4, placeholder: "例" %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>