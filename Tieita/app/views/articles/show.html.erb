<div class="container article-new-frame1">

  <div class="article-new-title">『<%= @article.title %>』</div>
  <div class="row article-new-frame2">
    <div class="article-new-frame3">
      <%= @article.user.profile_image %>
    </div>
    <div class="article-new-frame4">
      <div class="article-new-frame5">
       <div>
          <tr>
          <th>ユーザネーム：</th>
          <td><%= @article.user.profile_name %></td>
        </tr>
       </div>
       <div>
         <tr>
          <th>introduction：</th>
          <td><%= @article.user.introduction %></td>
        </tr>
       </div>
      </div>
      <div class="article-new-frame5">
        <div>
         <tr>
          <th>シチュエーション：</th>
          <td><%= @article.situation %></td>
        </tr>
       </div>
      </div>
    </div>
  </div>
  <div class="row article-new-frame6">
    <div class="make-article-procedure" style="background-color:#f5f5f5;">

      <div class="article-contents">
        <div class="article-image"><%= @article.article_image1 %></div>
        <div class="article-text-field" >
          <div class="article-text"><%= @article.description1 %></div>
        </div>
      </div>

      <div class="article-contents">
        <div class="article-image"><%= @article.article_image2 %></div>
        <div class="article-text-field" >
          <div class="article-text"><%= @article.description2 %></div>
        </div>
      </div>

      <div class="article-contents">
        <div class="article-image"><%= @article.article_image3 %></div>
        <div class="article-text-field" >
          <div class="article-text"><%= @article.description3 %></div>
        </div>
      </div>

      <div class="article-contents">
        <div class="article-image"><%= @article.article_image4 %></div>
        <div class="article-text-field" >
          <div class="article-text"><%= @article.description4 %></div>
        </div>
      </div>


    </div>
  </div>
</div>