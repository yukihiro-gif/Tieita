<div class="container mypage-layout">
  <%= form_with model: @user, url:users_path, local: true do |f| %>
  <div class="row">
  <div class="col mypage-layout1" style="background-color:#c0c0c0;">
    <%= f.attachment_field :profile_image %>
  </div>
  <div class="col mypage-layout2">
    <div class="mypage-layout3" style="background-color:#d3d3d3;">
      <div><p>プロフィール名</p></div>
      <div><%= f.text_field :profile_name %></div>
    </div>
    <div class="mypage-layout3" style="background-color:#f5f5f5;">
      <div><p>introduction</p></div>
      <div><%= f.text_area :introduction %></div>
    </div>
  </div>
  </div>
  <%= f.submit "プロフィール作成" %>
  <% end %>
</div>