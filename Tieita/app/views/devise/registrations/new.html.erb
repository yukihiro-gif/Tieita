<div><h2 class="login_title">新規登録画面</h2></div>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <table class="login_table">
  <tr><th class="login-item">お名前</th></tr>
  <tr>
    <td class="login-itemA"><%= f.text_field :name_sei, placeholder: "姓", autofocus: true, autocomplete: "name_sei" %></td>
    <td class="login-itemA"><%= f.text_field :name_mei, placeholder: "名", autofocus: true, autocomplete: "name_mei" %></td>
  </tr>
  <tr><th class="login-item">お名前（フリガナ）</th></tr>
  <tr>
    <td class="login-itemA"><%= f.text_field :name_kana_sei, placeholder: "セイ", autofocus: true, autocomplete: "name_kana_sei" %></td>
    <td class="login-itemA"><%= f.text_field :name_kana_mei, placeholder: "メイ", autofocus: true, autocomplete: "name_kana_mei" %></td>
  </tr>
</table>
<table class="login_table">
  <tr><th class="login-item">電話番号</th></tr>
  <tr><td><%= f.text_field :tel, placeholder: "00000000000", autofocus: true, autocomplete: "tel" %></td></tr>
  <tr><th class="login-item">enail</th></tr>
  <tr><td><%= f.email_field :email, placeholder: "(例)tarou@gmail.com", autofocus: true, autocomplete: "email" %></td></tr>
  <tr><th class="login-item">password</th></tr>
  <tr><td><%= f.password_field :password, autocomplete: "current-password" %></td></tr>
</table>

  <div class="login-table">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
